<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >

    <ImageView
        android:id="@+id/iv_close"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:layout_alignParentEnd="true"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_close"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_below="@+id/iv_close"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_report_complete"
        android:gravity="center_horizontal"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        />


    <TextView
        android:id="@+id/tv_claim_id"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="PFN0934648"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        />


    <RelativeLayout
        android:id="@+id/rl_message"
        android:background="@drawable/button_gray_light"
        android:layout_below="@+id/tv_claim_id"
        android:layout_marginTop="40dp"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/tv_message"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_finish_upload_claim"
            android:gravity="center_horizontal"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="@color/colorBlue1"
            />


     </RelativeLayout>


    <TextView
        android:id="@+id/tv_share_your_claim"
        android:layout_below="@+id/rl_message"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_share_your_claim"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        />

    <LinearLayout
        android:id="@+id/ll_share"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_share_your_claim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:weightSum="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_share_sms"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_share_sms"
            android:layout_weight="1"
            android:contentDescription="@string/app_name" />

        <ImageView
            android:id="@+id/iv_share_email"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_share_email"
            android:layout_weight="1"
            android:contentDescription="@string/app_name" />

    </LinearLayout>

</RelativeLayout>