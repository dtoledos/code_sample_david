<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/rl_xxxx"
            android:paddingBottom="100dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:id="@+id/progressBar"
                android:progressBackgroundTint="@color/alpha_cyan"
                android:progressTint="@android:color/holo_red_dark"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_width="180dp"
                android:layout_height="22dp"
                android:padding="10dp"
                android:max="100"
                android:progress="0"/-->

            <RelativeLayout
                android:id="@+id/rl_start_claimb"
                android:layout_below="@+id/progressBar"
                android:layout_marginTop="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                >

                <TextView
                    android:id="@+id/tv_start_claimb"
                    android:background="@drawable/shadow_131552"
                    android:includeFontPadding="false"
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:text="@string/label_start_claim"
                    android:textColor="@color/change_color1"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />

            </RelativeLayout> <!--button_mainmenulogged-->


            <RelativeLayout
                android:id="@+id/rl_white_something"
                android:layout_below="@+id/rl_start_claimb"
                android:layout_marginTop="50dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                >

                <TextView
                    android:id="@+id/tv_white_something"
                    android:background="@drawable/shadow_button_mainmenulogged_white"
                    android:includeFontPadding="false"
                    android:layout_marginTop="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:text="@string/label_witness_something2"
                    android:textColor="@color/change_color2"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>