<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite2"
      >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/iv_back_wa"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginStart="3dp"
                android:layout_width="33dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_back"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/tv_title_wa"
                android:includeFontPadding="false"
                android:layout_marginTop="-15dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_below="@+id/iv_back_wa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/label_what_type_accident"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="18sp"
                />


            <RelativeLayout
                android:id="@+id/rl_form_home"
                android:background="@drawable/button_waccident"
                android:layout_below="@+id/tv_title_wa"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:id="@+id/ll_home_wa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    >

                    <ImageView
                        android:id="@+id/iv_home_wa"
                        android:layout_weight="1"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:src="@drawable/ic_home"
                        android:contentDescription="@string/app_name" />


                    <RelativeLayout
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_home_wa"
                            android:layout_marginStart="0dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left"
                            android:text="@string/label_home"
                            android:textColor="@color/colorBlack"
                            android:textStyle="normal"
                            android:textSize="26sp"
                            />

                        <ImageView
                            android:id="@+id/iv_arrow_home_wa"
                            android:layout_marginEnd="@dimen/margen_end_witness_acc"
                            android:layout_below="@+id/tv_home_wa"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="39dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_start3"
                            android:contentDescription="@string/app_name" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_form_auto"
                android:background="@drawable/button_waccident"
                android:layout_below="@+id/rl_form_home"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:id="@+id/ll_auto_wa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    >

                    <ImageView
                        android:id="@+id/iv_auto_wa"
                        android:layout_weight="1"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:src="@drawable/ic_auto"
                        android:contentDescription="@string/app_name" />


                    <RelativeLayout
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_auto_wa"
                            android:layout_marginStart="0dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left"
                            android:text="@string/label_auto"
                            android:textColor="@color/colorBlack"
                            android:textStyle="normal"
                            android:textSize="26sp"
                            />

                        <ImageView
                            android:id="@+id/iv_arrow_auto_wa"
                            android:layout_width="39dp"
                            android:layout_height="40dp"
                            android:layout_below="@+id/tv_auto_wa"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="13dp"
                            android:layout_marginBottom="10dp"
                            android:contentDescription="@string/app_name"
                            android:src="@drawable/ic_start3"
                            />
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_form_business"
                android:background="@drawable/button_waccident"
                android:layout_below="@+id/rl_form_auto"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:id="@+id/ll_business_wa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    >

                    <ImageView
                        android:id="@+id/iv_business_wa"
                        android:layout_weight="1"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="110dp"
                        android:src="@drawable/ic_business"
                        android:contentDescription="@string/app_name" />


                    <RelativeLayout
                        android:layout_weight="1"
                        android:background="@color/colorWhite"
                        android:layout_marginTop="40dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_business_wa"
                            android:layout_marginStart="0dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="left"
                            android:text="@string/label_business"
                            android:textColor="@color/colorBlack"
                            android:textStyle="normal"
                            android:textSize="26sp"
                            />

                        <ImageView
                            android:id="@+id/iv_arrow_business_wa"
                            android:layout_below="@+id/tv_business_wa"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/margen_end_witness_acc"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="39dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_start3"

                            android:contentDescription="@string/app_name" />
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>
    </RelativeLayout>
  </ScrollView>
</RelativeLayout>