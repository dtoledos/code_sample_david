<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.act.FreeAgentGetStartedAct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <!--androidx.cardview.widget.CardView
                android:id="@+id/cardView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:cardBackgroundColor="@color/colorWhite"
                android:elevation="4dp"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:clipToPadding="true"
                android:clipChildren="false"
                android:layout_marginTop="0dip"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="false"
                app:cardPreventCornerOverlap="true"
                app:cardCornerRadius="0dip"
                -->



                <RelativeLayout
                    android:id="@+id/rl_title1"
                    android:background="@drawable/welcome_border"
                    android:layout_marginTop="0dp"
                    android:elevation="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp">


                    <ImageView
                        android:id="@+id/iv_close_login"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        android:tint="@color/colorWhite"
                        android:layout_alignParentEnd="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_close"
                        android:contentDescription="@string/app_name" />

                    <TextView
                        android:id="@+id/tv_welcome"
                        android:layout_below="@+id/iv_close_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_welcome"
                        android:textColor="@color/colorWhite"
                        android:layout_marginStart="20dp"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:textSize="28sp"
                        />

                    <TextView
                        android:id="@+id/tv_subtitle"
                        android:layout_below="@+id/tv_welcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_create_an_account"
                        android:textColor="@color/colorBlue6"
                        android:layout_marginStart="20dp"
                        android:paddingBottom="20dp"
                        android:includeFontPadding="false"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        />

                </RelativeLayout>

            <!--/androidx.cardview.widget.CardView-->



            <RelativeLayout
                android:id="@+id/rl_form"
                android:layout_below="@+id/rl_title1"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">


                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:autofillHints=""
                    android:hint="@string/label_name"
                    android:inputType="text"
                    android:maxLength="60"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_below="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:autofillHints=""
                    android:hint="@string/label_email"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/edtPhoneNumber"
                    android:layout_below="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:autofillHints=""
                    android:hint="@string/label_phone_number"
                    android:inputType="number"
                    android:maxLength="50"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"/>


                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_below="@+id/edtPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:autofillHints=""
                    android:hint="@string/label_password"
                    android:inputType="textPassword"
                    android:maxLength="50"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"/>


                <EditText
                    android:id="@+id/edtconfirmPassword"
                    android:layout_below="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:autofillHints=""
                    android:hint="@string/label_confirm_password"
                    android:inputType="textPassword"
                    android:maxLength="50"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"/>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_createaccount"
                android:layout_below="@+id/rl_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|center_horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/button_login"
                >

                <TextView
                    android:id="@+id/tv_create_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_create_account"
                    android:textColor="@color/change_color1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/rl_createaccount"
                android:indeterminate="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                tools:visibility="visible"
                />

    </RelativeLayout>
   </ScrollView>
</RelativeLayout>