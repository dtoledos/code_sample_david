<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/rl_tabbuttons"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_main"
        android:layout_above="@+id/rl_buttons_tab"
        android:layout_marginBottom="-50dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"

        android:src="@drawable/change_color_img"
        android:contentDescription="@string/app_name" />


    <RelativeLayout
        android:id="@+id/rl_buttons_tab"
        android:layout_marginBottom="-20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow31"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rl_claim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:id="@+id/iv_claim"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:alpha="0.5"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/claim_history1" />

                <TextView
                    android:id="@+id/tv_claim_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_claim"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="0dp"
                    android:alpha="0.5"
                    android:includeFontPadding="false"
                    android:text="@string/label_claim_history"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:tint="#333333" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="end">

                <ImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="20dp"
                    android:alpha="0.5"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_profile3" />

                <TextView
                    android:id="@+id/tv_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_profile"
                    android:layout_centerHorizontal="true"
                    android:layout_marginEnd="20dp"
                    android:alpha="0.5"
                    android:gravity="end"

                    android:includeFontPadding="false"
                    android:text="@string/label_profile"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:tint="#333333" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>




</RelativeLayout>