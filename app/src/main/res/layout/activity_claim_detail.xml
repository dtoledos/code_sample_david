<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.act.FreeAgentGetStartedAct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/iv_back_pol"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="@color/colorBlack"
                android:src="@drawable/ic_back"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/tv_welcome"
                android:layout_below="@+id/iv_back_pol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/title_claim_detail"
                android:textColor="@color/colorBlack"
                android:layout_marginBottom="20dp"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:textSize="28sp"
                />

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_below="@+id/tv_welcome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:weightSum="2"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_claim"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp">

                    <TextView
                        android:id="@+id/tv_claim_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_centerHorizontal="true"
                        android:text="@string/title_claim_type"
                        android:textColor="@color/colorBlack"
                        android:includeFontPadding="false"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        />

                    <View
                        android:id="@+id/myview_1"
                        android:layout_marginTop="1dp"
                        android:layout_marginStart="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_claim_type"
                        android:layout_width="90dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colorBlack"
                        />

                    <TextView
                        android:id="@+id/tv_claim_type_value"
                        android:layout_below="@+id/myview_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_centerHorizontal="true"
                        tools:text="@string/label_auto"
                        android:gravity="center_horizontal|center"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_date"
                    android:layout_weight="1"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp">

                    <TextView
                        android:id="@+id/tv_claim_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="20dp"
                        android:text="@string/title_claim_date"
                        android:textColor="@color/colorBlack"
                        android:includeFontPadding="false"
                        android:textStyle="normal"
                        android:textSize="14sp"
                        />

                    <View
                        android:id="@+id/myview_2"
                        android:layout_marginTop="1dp"
                        android:layout_marginStart="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_claim_date"
                        android:layout_width="90dp"
                        android:layout_height="0.5dp"
                        android:background="@color/colorBlack"
                        />

                    <TextView
                        android:id="@+id/tv_claim_date_value"
                        android:layout_below="@+id/myview_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="20dp"
                        tools:text="7/23/20"
                        android:gravity="center_horizontal|center"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="10dp"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        />

                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/rl_status"
                android:layout_below="@+id/ll_1"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp">

                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:text="@string/title_order_status"
                    android:textColor="@color/colorBlack"
                    android:includeFontPadding="false"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    />

                <View
                    android:id="@+id/myview_3"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_order_status"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorBlack"
                    />

                <TextView
                    android:id="@+id/tv_order_status_value"
                    android:layout_below="@+id/myview_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    tools:text="UG122334454"
                    android:gravity="center_horizontal|center"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="10dp"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_claim_id"
                android:layout_below="@+id/rl_status"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp">

                <TextView
                    android:id="@+id/tv_claim_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:text="@string/title_claim_id"
                    android:textColor="@color/colorBlack"
                    android:includeFontPadding="false"
                    android:textStyle="normal"
                    android:textSize="14sp"
                    />

                <View
                    android:id="@+id/myview_4"
                    android:layout_marginTop="1dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginEnd="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/tv_claim_id"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorBlack"
                    />

                <TextView
                    android:id="@+id/tv_claim_id_value"
                    android:layout_below="@+id/myview_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    tools:text="UG122334454"
                    android:gravity="center_horizontal|center"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="10dp"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_order_report"
                android:layout_below="@+id/rl_claim_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|center_horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_login"
                >

                <TextView
                    android:id="@+id/tv_create_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_order_report"
                    android:textColor="@color/change_color1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    />

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/rl_order_report"
                android:indeterminate="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                tools:visibility="visible"
                />

    </RelativeLayout>
   </ScrollView>
</RelativeLayout>